<li class='room-index__items__item room-index-hover'>
  <% user = opened_user(room) %>
  <%= link_to user_path(user.id) do %>
    <%= image_tag "#{user.avatar}", class: "room-index__items__item--icon" %>
  <% end %>
  <%= room_path(room), class: 'room-index__items__item__content' do %>
    <div class="room-index__items__item__content--body">
      <strong class="room-index__items__item__content--nickname">
        <%= user.name %>
      </strong>
      <% message = get_most_new_message(room) %>
      <% if message.present? %>
        <div class="room-index__items__item__content--message">
          <%= truncate(message.message, length: 20) %>
        </div>
        <div class="room-index__items__item__content--date">
          <%= message.created_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
      <% end %>
    </div>
  <% end %>
</li>
