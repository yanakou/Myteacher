<% @comments.each do |comment| %>
  <div id="comment_<%= comment.id %>">
    <%= comment.user.name %>
    <%= comment.content %>
    <%= comment.updated_at.strftime("%Y-%m-%d %H:%M") %>
  </div>
  <div class="list-inline-item">
    <% if logged_in? && comment.user_id == current_user.id %>
      <%= link_to edit_tweet_comment_path(comment.tweet_id, comment.id),remote: true do %>
        <input type="submit" value="編集"></input>
      <% end %>
      <%= link_to tweet_comment_path(comment.tweet_id, comment.id), method: :delete, remote: true, data: { confirm: '削除してもいいですか？' } do %>
        <input type="submit" value="削除"></input>
      <% end %>
    <% end %>
  </div>
<% end %>
