<% if logged_in? %>
  <%= link_to new_tweet_path, class: "new-btn", data: {"turbolinks" => false} do %>
    <div class="new-btn__tweet">
      <p class="new-btn__tweet--text">
        投稿
      </p>
      <div class="new-btn__tweet--icon">
        <i class="fas fa-plus"></i>
      </div>
    </div>
  <% end %>
<% else %>
  <%= link_to guest_sign_in_path, method: :post, class: "new-btn" do %>
    <div class="new-btn__session">
      <div class="new-btn__session--text">
        <p>ゲストログイン</p>
      </div>
    </div>
  <% end %>
<% end %>