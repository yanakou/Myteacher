<% if logged_in? %>
  <% unless @user.id == current_user.id %>
    <% if @haveRoom == true %>
      <%= link_to room_path(@roomId) do %>
        <button type="button" class="btn btn-info user-show__top--contact--btn">
          メッセージを送る
        </button>
      <% end %>
    <% else %>
      <%= form_with(model:@room, local: true) do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= f.submit "メッセージを送る", class: "btn btn-info user-show__top--contact--btn" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
