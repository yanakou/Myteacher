<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :ニックネーム %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード(再入力)" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録する", class: "btn" %>
    <% end %>
  </div>
</div>